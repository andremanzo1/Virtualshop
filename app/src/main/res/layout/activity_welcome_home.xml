
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Home!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Add TextView for displaying the username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/> <!-- Set a color, replace with your desired text color -->


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="122dp"
        android:layout_height="79dp"
        android:layout_below="@id/usernameTextView"
        android:layout_marginTop="102dp"
        android:text="Logout" />

    <Button
        android:id="@+id/viewProductsButton"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignBottom="@+id/usernameTextView"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="-96dp"
        android:onClick="onViewProductsButtonClick"
        android:text="View Products" />
</RelativeLayout>